
.navbar {
	text-transform: uppercase;
	font-weight: bold;
	padding: 0rem 1rem;
}

.navbar-expand-md .navbar-nav .nav-link {
	padding: .75rem 1rem;
	color: white;
}

.navbar-expand-md .navbar-nav .nav-link:hover,
.navbar-expand-md .navbar-nav .nav-link:focus,
.navbar-expand-md .navbar-nav .nav-link.active	{
	background-color: black;
	color: white;
}

.jumbotron {
	background-color: inherit;
}

.row-clickable {
	cursor: pointer;
}

.container-cluster-num {
	margin: 0, 10px;
	position: relative;
	height: 2rem;
	font-weight: bold;
}

.breadcrumb-item + .breadcrumb-item::before {
	content: ">";
}

h2, h3, h4 {
	margin-top: 3rem;
}

.data-available button {
	text-transform: uppercase;
	font-size: 0.8em;
	font-weight: bold;
	cursor: default !important;
}

body {
	padding-top: 70px;
	padding-bottom: 70px;
}

footer {
	margin-top: 70px;
}

footer {
	text-transform: uppercase;
	font-size: 0.8em;
}

	footer hr {
		border-color: rgba(0, 0, 0, 0.4);
	}

	footer a {
		color: inherit;
	}

.form-group.required label:after { 
    content: "*";
    color: red;
    font-weight: bold;
}
.form-group label { 
    font-weight: 500;
}

