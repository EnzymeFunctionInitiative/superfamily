{% extends "base.html.twig" %}
{% set page_title = 'Home' %}
{% set page_active = 'index' %}


{% block content %}
        <div class="container">
            <div class="container">
{% include 'intro/site_specific/intro_header.html.twig' %}
            </div>
            <div class="container">
{% include 'intro/intro_pages.html.twig' %}
            </div>

        </div>
{% endblock %}

{% block body_javascript %}

    <script>
        $(document).ready(function () {
            var hash = window.location.hash;
            if (hash) {
                hash.startsWith("#explore") && $('ul.nav a[href="#explore"]').tab('show');
                $('ul.nav a[href="' + hash + '"]').tab('show');
            }
        });
    </script>

{% endblock %}

